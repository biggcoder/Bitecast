{
    "manifest_version": 3,
    "name": "AI Content Summarizer",
    "version": "1.0.0",
    "description": "Summarize YouTube videos using AI",
    "permissions": ["activeTab", "storage", "tabs"],
    "host_permissions": [
      "http://localhost:8000/*",
      "*://*.youtube.com/*"
    ],
    "action": {
     
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      }
    },
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["contentScript.js"]
      }
    ]
  }
  